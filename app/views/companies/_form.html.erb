<%= error_messages_for :company %>
      
  <div>
    <label for="clientFormName"><%= :name.l %>: <span class="label_required">*</span></label>
    <%= text_field 'company', 'name', :id => 'clientFormName' %>
  </div>
  
  <div>
    <label for="clientFormTimezone"><%= :timezone.l %>: <span class="label_required">*</span></label>
    <%= time_zone_select 'company', 'time_zone', nil, {}, {:id => 'clientFormTimezone', :class => 'long'} %>
  </div>
  
  <fieldset>
    <legend><%= :contact_online.l %></legend>
    
    <div>
      <label for="clientFormEmail"><%= :email_address.l %>:</label>
      <%= text_field 'company', 'email', :id => 'clientFormEmail' %>
    </div>
    
    <div>
      <label for="clientFormHomepage"><%= :homepage.l %>:</label>
      <%= text_field 'company', 'homepage', :id => 'clientFormHomepage' %>
    </div>
  </fieldset>

  <fieldset>
    <legend><%= :phone_numbers.l %></legend>
    
    <div>
      <label for="clientFormPhoneNumber"><%= :phone_number.l %>:</label>
      <%= text_field 'company', 'phone_number', :id => 'clientFormPhoneNumber' %>
    </div>
    
    <div>
      <label for="clientFormFaxNumber"><%= :fax_number.l %>:</label>
      <%= text_field 'company', 'fax_number', :id => 'clientFormFaxNumber' %>
    </div>
    
  </fieldset>

  <fieldset>
    <legend><%= :address.l %></legend>
    
    <div>
      <label for="clientFormAddress"><%= :address.l %>:</label>
      <%= text_field 'company', 'address', :id => 'clientFormAddress' %>
    </div>
    
    <div>
      <label for="clientFormAddress2"><%= :address_2.l %>:</label>
      <%= text_field 'company', 'address2', :id => 'clientFormAddress2' %>
    </div>
    
    <div>
      <label for="clientFormCity"><%= :city.l %>:</label>
      <%= text_field 'company', 'city', :id => 'clientFormCity' %>
    </div>
    
    <div>
      <label for="clientFormState"><%= :state.l %>:</label>
      <%= text_field 'company', 'state', :id => 'clientFormState' %>
    </div>
    
    <div>
      <label for="clientFormZipcode"><%= :zipcode.l %>:</label>
      <%= text_field 'company', 'zipcode', :id => 'clientFormZipcode' %>
    </div>
    
    <div>
      <label for="clientFormCountry"><%= :country.l %>:</label>
      <%= text_field 'company', 'country', :id => 'clientFormCountry', :limit => 100 %>
    </div>
    
  </fieldset>
